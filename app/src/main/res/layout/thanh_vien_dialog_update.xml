<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="330dp"
    android:layout_height="wrap_content"
    android:elevation="8dp"
    app:cardCornerRadius="30dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="15dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="22sp"
            android:textStyle="bold"
            android:textColor="#009688"
            android:text="@string/cap_nhat_thanh_vien"
            android:gravity="center"
            android:layout_marginBottom="20dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:textStyle="bold"
                android:text="@string/maThanhVien"/>

            <EditText
                android:id="@+id/edMaTV1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/maThanhVien"
                android:layout_marginBottom="15dp"
                android:inputType="number"
                tools:ignore="Autofill,TextFields" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:textStyle="bold"
                android:text="@string/tenThanhVien"/>

            <EditText
                android:id="@+id/edTenTV1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/tenThanhVien"
                android:layout_marginBottom="15dp"
                tools:ignore="Autofill,TextFields" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:textStyle="bold"
                android:text="@string/namSinh"/>

            <EditText
                android:id="@+id/edNamSinh1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/namSinh"
                android:layout_marginBottom="15dp"
                tools:ignore="Autofill,TextFields" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="20dp"
            android:gravity="center">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnSaveTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableStart="@drawable/ic_save"
                android:text="@string/luu"
                android:textSize="16sp"
                android:layout_marginEnd="30dp"
                android:background="@drawable/border_style"/>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnCancelTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableStart="@drawable/ic_cancle"
                android:text="@string/huy"
                android:textSize="16sp"
                android:layout_marginStart="30dp"
                android:background="@drawable/border_style"/>

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>